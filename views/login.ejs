<% include ./partials/header %>
<div class="row" style="height: 700px;">
    <h1 style="text-align: center; color: white;">Login</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/login" method="post">
            <div class="form-group">
                <input class="form-control" type="text" name="username" placeholder="username">
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" placeholder="password">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Login</button>
            </div>
            <div style="display: flex; flex-direction: row; justify-content: space-between; padding: 5px;">
                <a href="/forgot" style="color:black;">Forgot Password</a>
            <a href="/" style="color: black;">Go Back</a>
            </div>
        </form>
        
        
    </div>
</div>
<% include ./partials/footer %>